{
  "compilerOptions": {

    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@svg/*": ["src/svg/*"]
    },

    "jsx": "react",
    "target": "es6",
    "lib": ["esnext", "dom"],

    "outDir": "static/scripts",
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["builder"]
}
